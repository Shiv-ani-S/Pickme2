<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sell"
    android:background="@drawable/loginpg1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"
        android:foregroundGravity="center"
        android:src="@mipmap/ic_launcher_round" />

        <EditText
            android:id="@+id/isbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edittxt"
            android:layout_below="@id/profile_image"
            android:padding="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="ISBN"
            android:textColorHint="#000"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:autofillHints=""

        />
        <EditText
            android:id="@+id/book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edittxt"
            android:layout_marginTop="10dp"
            android:layout_below="@id/isbn"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Book Name"
            android:textColorHint="#000"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:autofillHints="" />
        <EditText
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edittxt"
            android:layout_marginTop="10dp"
            android:layout_below="@id/book_name"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Author"
            android:textColorHint="#000"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:autofillHints="" />
        <EditText
            android:id="@+id/edition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edittxt"
            android:layout_marginTop="10dp"
            android:layout_below="@id/author"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Book Edition"
            android:textColorHint="#000"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:autofillHints="" />
        <EditText
            android:id="@+id/condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edittxt"
            android:layout_marginTop="10dp"
            android:layout_below="@id/edition"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Book Condition"
            android:textColorHint="#000"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:autofillHints="" />
        <EditText
            android:id="@+id/publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edittxt"
            android:layout_marginTop="10dp"
            android:layout_below="@id/condition"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Publisher"
            android:textColorHint="#000"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:autofillHints="" />
        <EditText
            android:id="@+id/pages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edittxt"
            android:layout_marginTop="10dp"
            android:layout_below="@id/publisher"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Pages"
            android:textColorHint="#000"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:autofillHints="" />
        <EditText
            android:id="@+id/discription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edittxt"
            android:layout_marginTop="10dp"
            android:layout_below="@id/isbn"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Discription"
            android:textColorHint="#000"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:autofillHints="" />
        <EditText
            android:id="@+id/original_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edittxt"
            android:layout_marginTop="10dp"
            android:layout_below="@id/isbn"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Original Price"
            android:textColorHint="#000"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:autofillHints="" />
        <EditText
            android:id="@+id/your_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edittxt"
            android:layout_marginTop="10dp"
            android:layout_below="@id/isbn"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Your Offer"
            android:textColorHint="#000"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:autofillHints="" />
        <EditText
            android:id="@+id/phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edittxt"
            android:layout_marginTop="10dp"
            android:layout_below="@id/isbn"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Phone Number"
            android:textColorHint="#000"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:autofillHints="" />
        <Button
            android:id="@+id/sell_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_no"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/buttons"
            android:padding="17dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>

